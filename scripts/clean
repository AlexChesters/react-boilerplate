#!/bin/bash
set -e

export NAME=$1

if [ ! $NAME ]; then
  echo "[ERROR] No name provided"
  echo "Usage: ./scripts/clean my-new-app"
  exit 1
fi

node -e "
const fs = require('fs')
const pkg = require('./package')
pkg.name = '$NAME'
delete pkg.repository
delete pkg.author
delete pkg.bugs
delete pkg.homepage
fs.writeFileSync('package.json', JSON.stringify(pkg, null, 2))
"

echo "# $NAME" > README.md

rm -rf .git/
rm -- $0
git init
git add .
git commit -m "Initial commit"
